   [ run block/shacal.cpp /boost/test//boost_unit_test_framework/<link>static ]
   [ run block/shacal2.cpp /boost/test//boost_unit_test_framework/<link>static ]
;

test-suite codec_tests :

   [ run codec/base.cpp /boost/test//boost_unit_test_framework/<link>static ]
   [ run codec/hex.cpp /boost/test//boost_unit_test_framework/<link>static ]
;

